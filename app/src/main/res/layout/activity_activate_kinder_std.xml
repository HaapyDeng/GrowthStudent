<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Student.Activity.ActivateKinderStdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/tv_info"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back_button_select" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent" />


        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="完善信息"
            android:textColor="#333333"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="输入身份证号码"
        android:textColor="#ff333333"
        android:textSize="18sp" />

    <com.mpl.GrowthStud.Student.Tools.LineEditText
        android:id="@+id/et_card_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:lines="1"
        android:maxLength="24" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="首次登录请输入身份证号激活"
        android:textColor="#999999"
        android:textSize="14dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <Button
        android:id="@+id/btn_active"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/login_button_shape"
        android:text="激活"
        android:textColor="#ffffff"
        android:textSize="16dp" />
</LinearLayout>